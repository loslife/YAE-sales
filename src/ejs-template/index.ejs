    <% for(var j=0;j<categories[i].topics.length;j++){ %>
    <a class="topicBox" href="http://static.yilos.com/wx/html/video_detail.html?topicId=<%= categories[i].topics[j].topicId %>">
        <div class="topicPoster" style="background:url('<%= categories[i].topics[j].thumbUrl %>');background-size: cover"></div>
        <p class="topicTitle"><%= categories[i].topics[j].title %></p>
        <div class="topicInfor db bo-h bp-j ba-c">
            <img src="<%= categories[i].topics[j].photoUrl %>" >
            <div class="authorName bf-2" ><%= categories[i].topics[j].author %></div>
            <div class="topicTime bf-1"><%= categories[i].topics[j].createDate %></div>
        </div>
    </a>

    <% } %>
    <% if(categories[i].topics.length%2!=0){ %>
    <a class="topicBox">

    </a>
    <% } %>
</div>
<% } %>
<div style="height:3em;"></div>
