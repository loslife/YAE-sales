        <% for(var i=0;i<posters.length;i++){ %>
        <li><a class="carouselPoster" href="http://static.yilos.com/wx/html/video_detail.html?topicId=<%= posters[i].topicId %>"><img src="<%= posters[i].picUrl %>"></a></li>
        <% } %>
    </ul>
